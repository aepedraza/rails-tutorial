<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>First micropost:</strong>
  <% if @user.microposts.size > 0 %>
    <%= @user.microposts.first.content %>
  <% else %>
    <i>[No microposts for this user]</i>
  <% end %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
